<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PayPal Checkout</title>
    <script src="https://www.paypal.com/sdk/js?components=buttons,hosted-fields&client-id=<%= clientId %>"></script>
</head>
<body>
    <h2>Pay with PayPal</h2>
    <p>Product: <strong>Red Sox Hat</strong></p>
    <p>Price: <strong>$25.00</strong></p>
    
    <div id="paypal-button-container"></div>

    <script>
        paypal.Buttons({
            createOrder: async () => {
                const productDetails = {
                    productId: "001",
                    name: "Red Sox Hat",
                    price: "25.00",
                    currency: "USD",
                    quantity: 1
                };

                const response = await fetch("/api/orders", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ cart: productDetails }) // Pass product data
                });

                const order = await response.json();
                return order.id;
            },
            onApprove: async (data) => {
                const response = await fetch(`/api/orders/${data.orderID}/capture`, { method: "POST" });
                const details = await response.json();
                alert("Payment successful!");
            }
        }).render("#paypal-button-container");
    </script>
</body>
</html>
